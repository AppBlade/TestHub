<% cache do %>

  <div class="row">

    <div class="large-12 columns">

      <h2 class="header"><%= t 'global.app.name' %></h2>
      <p class="subheader"><%= t 'global.app.slogan' %></p>

      <hr>

    </div>

  </div>

<% end %>

<div class="row">
  <div class="large-12 columns">
    <% if current_user %>
      <%= t('global.hello', :name => current_user.first_name) %>;
    <% else %>
      <%= link_to t('global.github.registration'), oauth_start_path(client: 'github'), method: :post %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="large-12 columns">
    <% if current_device %>
      <%= Product.new(current_device.product, current_device.serial).inspect %>
      <%= Ios::Version.new(current_device.version).inspect %>
      <%= current_device.udid %>
    <% else %>
      <%= link_to t('global.device.registration'), devices_path(format: 'mobileconfig'), method: :post %>
    <% end %>
  </div>
</div>
